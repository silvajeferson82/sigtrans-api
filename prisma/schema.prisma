generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Car {
  id        String     @id @default(uuid())
  placa     String     @unique
  chassi    String     @unique
  marca     String
  modelo    String
  UF        String
  categoria String
  tipo      String
  especie   String
  ano       Int
  situacao  String
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  alertas   CarAlert[]

  @@map("cars")
}

model Situation {
  id        String      @id @default(uuid())
  nome      String
  descricao String
  tipo      String
  situacao  String
  status    String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  veiculos  CarAlert[]

  @@map("situations")
}

model CarAlert {
  id        String      @id @default(uuid())
  situationId  String
  carId String
  createdAt DateTime    @default(now())
  alerta    Situation   @relation(fields: [situationId], references: [id])
  veiculo   Car         @relation(fields: [carId], references: [id])

  @@map("alerts")
}